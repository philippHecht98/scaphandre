    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'scaphandre'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=scaphandre"
                ],
                "filter": {
                    "name": "scaphandre",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'scaphandre'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=scaphandre",
                    "--package=scaphandre"
                ],
                "filter": {
                    "name": "scaphandre",
                    "kind": "bin"
                }
            },
            "args": ["qemu"],
            "cwd": "${workspaceFolder}", 
            "env": {"RUST_LOG": "info"}
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'scaphandre'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=scaphandre",
                    "--package=scaphandre"
                ],
                "filter": {
                    "name": "scaphandre",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration",
                    "--package=scaphandre"
                ],
                "filter": {
                    "name": "integration",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}